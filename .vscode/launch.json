{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Nuxt: Dev (npm run dev)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "EDITOR": "code",
        "VISUAL": "code"
      },
      "skipFiles": ["<node_internals>/**"],
      "restart": true,
      "timeout": 60000
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Nuxt: Attach to Dev Server",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}

